<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">


<!-- Thread and || execution concept: https://prnt.sc/TvpZ_hHA6Ru7 -->
<!--Parallel Execution: https://prnt.sc/eJYbqrLGjMrc -->
<suite name="Suite" thread-count="5" parallel="tests">

	<!-- Serial Execution starts from Chrome browser-->
	<test thread-count="5" name="ChromeTest">
		<parameter name="browser" value="chrome" />
		<parameter name="url" value="https://tutorialsninja.com/demo/index.php?route=account/login"/>

		<classes>
			<class name="day45.ParamTestDemo" />
		</classes>
	</test>

	<!--Now edge browser -->
	<test name="EdgeTest">
		<parameter name="url" value="https://tutorialsninja.com/demo/index.php?route=account/login"/>

		<parameter name="browser" value="edge" />
		<classes>
			<class name="day45.ParamTestDemo" />
		</classes>
	</test>

	<!--Now Firefox browser -->
	<test name="FirefoxTest">
		<parameter name="browser" value="firefox" />
		<parameter name="url" value="https://tutorialsninja.com/demo/index.php?route=account/login"/>

		<classes>
			<class name="day45.ParamTestDemo" />
		</classes>
	</test> <!--
	Test -->


</suite> <!--
Suite -->
